doctype html
html
  head
    link(rel="shortcut icon" type="image/png" href="/images/icons/favicon.png")
    meta(name="viewport" content="width=device-width, initial-scale=1")
    style.
      .sheet {
        margin: 0;
        width: 100%; 
        height: 297mm;
        background: #{model.invoiceTemplate && model.invoiceTemplate.backgroundColor ? model.invoiceTemplate.backgroundColor : '#ffffff'};
      }

      body{
        width: 100%; 
        margin: 0;
        padding: 0px ;
        background: #{model.invoiceTemplate && model.invoiceTemplate.backgroundColor ? model.invoiceTemplate.backgroundColor : '#ffffff'};
        font-family: #{model.invoiceTemplate && model.invoiceTemplate.fontFamily ? model.invoiceTemplate.fontFamily : 'Arial, sans-serif'};
        font-size: #{model.invoiceTemplate && model.invoiceTemplate.fontSize ? model.invoiceTemplate.fontSize : 14}px;
        color: #{model.invoiceTemplate && model.invoiceTemplate.secondaryColor ? model.invoiceTemplate.secondaryColor : '#222'};
        line-height: 1.4;
      }
      *, *:before, *:after {
        box-sizing: inherit;
        color: #{model.invoiceTemplate && model.invoiceTemplate.secondaryColor ? model.invoiceTemplate.secondaryColor : '#222'}
      }

      .clearfix {
        display: block; }
      //- .invoice-container {
      //-   position: relative;
      //-   margin: 0 auto;
      //-   color: #001028;
      //-   background: #fff;
      //-   font-size: 10px;
      //- }
      .left{
        float:left;
      }
      .right{
        float:right;
      }
      .top-area {    
        display: block;
        width:100%;
        
      }
      alignRight :{
        text-align: right !important;
      }
      alignLeft :{
        text-align: left;
      }
      .logo {
        width: #{model.invoiceTemplate && model.invoiceTemplate.logoSize ? model.invoiceTemplate.logoSize : 250}px;
        height: auto;
        max-height: 100px;
        object-fit: contain;
        image-rendering: -webkit-optimize-contrast;
        image-rendering: crisp-edges;
        display: block;
        margin-bottom: 15px;
        float: #{model.invoiceTemplate && model.invoiceTemplate.logoPosition ? model.invoiceTemplate.logoPosition : 'left'};
      }
      .company-info{
        text-align: right;
        font-size: 16px;
        font-weight: 600;
        line-height: 1.5;
      }
      h1.invoice{
        font-size: #{model.invoiceTemplate && model.invoiceTemplate.headerFontSize ? model.invoiceTemplate.headerFontSize : 42}px;
        color: #{model.invoiceTemplate && model.invoiceTemplate.primaryColor ? model.invoiceTemplate.primaryColor : '#52008c'};
        margin-top: 0;
        margin-bottom: 20px;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 1px;
      }
      p.strong{
        font-weight: 800;
        font-size: 16px;
        margin-bottom: 8px;
      }
      .billTo p {
        text-align: right !important;
        float:right;
        display:block;
        font-size: 15px;
        font-weight: 600;
        width:100%;
        margin-top:0;
        margin-bottom:12px;
        line-height: 1.4;
      }

      .tableHeader{
        color: #{model.invoiceTemplate && model.invoiceTemplate.tableHeaderColor ? model.invoiceTemplate.tableHeaderColor : '#52008c'};
      }
      .clearfix {
        display: block; }
      .col {
        float:left;
      }
      .col-1 {
        width: 4.16667%; }

      .col-2 {
        width: 8.33333%; }

      .col-3 {
        width: 12.5%; }

      .col-4 {
        width: 16.66667%; }

      .col-5 {
        width: 20.83333%; }

      .col-6 {
        width: 25%; }

      .col-7 {
        width: 29.16667%; }

      .col-8 {
        width: 33.33333%; }

      .col-9 {
        width: 37.5%; }

      .col-10 {
        width: 41.66667%; }

      .col-11 {
        width: 45.83333%; }

      .col-12 {
        width: 50%; }

      .col-13 {
        width: 54.16667%; }

      .col-14 {
        width: 58.33333%; }

      .col-15 {
        width: 62.5%; }

      .col-16 {
        width: 66.66667%; }

      .col-17 {
        width: 70.83333%; }

      .col-18 {
        width: 75%; }

      .col-19 {
        width: 79.16667%; }

      .col-20 {
        width: 83.33333%; }

      .col-21 {
        width: 87.5%; }

      .col-22 {
        width: 91.66667%; }

      .col-23 {
        width: 95.83333%; }

      .col-24 {
        width: 100%; }
      .space {
        margin-top: 40px;
        margin-bottom: 50px;
        width:100%;
      }
      
      /* Estilos adicionales para mejorar la presentaciÃ³n */
      .invoice-details {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 8px;
        margin: 20px 0;
        border-left: 4px solid #{model.invoiceTemplate && model.invoiceTemplate.primaryColor ? model.invoiceTemplate.primaryColor : '#52008c'};
      }
      
      .invoice-details p {
        font-size: 15px;
        font-weight: 600;
        margin: 8px 0;
      }
      
      .total-section {
        background-color: #{model.invoiceTemplate && model.invoiceTemplate.primaryColor ? model.invoiceTemplate.primaryColor : '#52008c'};
        color: white;
        padding: 20px;
        border-radius: 8px;
        margin: 20px 0;
        text-align: center;
      }
      
      .total-section .total-label {
        font-size: 18px;
        font-weight: 700;
        text-transform: uppercase;
        letter-spacing: 1px;
      }
      
      .total-section .total-amount {
        font-size: 24px;
        font-weight: 800;
        margin-top: 10px;
      }
      .top-area .number-invoice > h1 {
        font-weight: 500;
      }
      .about-invoice {
        padding: 0px 15px;
        margin-top: 15px;
        font-size: 16px;
        font-weight: 600;
      }
      .project-invoice {
        float: left;
        margin-bottom: 10px;
      }
      .project-invoice span {
        color: #5d6975;
        text-align: right;
        width: 60px;
        margin-right: 12px;
        display: inline-block;
        font-size: 14px;
        font-weight: 600;
      }
      .company-invoice {
        float: right;
        text-align: right;
        margin-bottom: 60px;
      }
      .project-invoice div, .company-invoice div {
        white-space: nowrap;
        margin: 8px auto;
        font-size: 15px;
        font-weight: 600;
      }
      .table-invoice {
        width: 100%;
        border-collapse: collapse;
        border-spacing: 0;
        margin-bottom: 20px;
      }
      .table-invoice tr:nth-child(2n-1) td {
        background: #{model.invoiceTemplate && model.invoiceTemplate.tableRowColor ? model.invoiceTemplate.tableRowColor : '#fcfeff'};
      }
      .table-invoice th, .table-invoice td {
        text-align: center;
      }
      .table-invoice th {
        padding: 15px 12px;
        border-bottom: 2px solid #{model.invoiceTemplate && model.invoiceTemplate.borderColor ? model.invoiceTemplate.borderColor : '#c2e0f2'};
        color: #{model.invoiceTemplate && model.invoiceTemplate.tableHeaderColor ? model.invoiceTemplate.tableHeaderColor : '#52008c'};
        white-space: nowrap;
        font-weight: 800;
        font-size: 16px;
        text-align: right;
        background-color: #{model.invoiceTemplate && model.invoiceTemplate.tableHeaderBgColor ? model.invoiceTemplate.tableHeaderBgColor : '#f8f9fa'};
        text-transform: uppercase;
        letter-spacing: 0.5px;
      }
      tbody{
        border-bottom: 1px solid #{model.invoiceTemplate && model.invoiceTemplate.borderColor ? model.invoiceTemplate.borderColor : '#c2e0f2'};
      }
      .table-invoice .service, .table-invoice .desc {
        text-align: left;
      }
      .table-invoice td {
        padding: 15px 12px;
        text-align: right;
        font-size: 14px;
        font-weight: 600;
        border-bottom: 1px solid #{model.invoiceTemplate && model.invoiceTemplate.borderColor ? model.invoiceTemplate.borderColor : '#e9ecef'};
      }
      .table-invoice td.service, .table-invoice td.desc {
        vertical-align: top;
      }
      .table-invoice td.unit, .table-invoice td.qty, .table-invoice td.total {
        
      }
      .table-invoice td.grand {
        border-top: 3px solid #{model.invoiceTemplate && model.invoiceTemplate.primaryColor ? model.invoiceTemplate.primaryColor : '#52008c'};
        font-weight: 800;
        font-size: 16px;
        background-color: #{model.invoiceTemplate && model.invoiceTemplate.tableRowColor ? model.invoiceTemplate.tableRowColor : '#f8f9fa'};
        padding: 20px 12px;
      }
      .service span{
        display:block;
        clear:both;
        width : 100%;
        color: #{model.invoiceTemplate && model.invoiceTemplate.textColor ? model.invoiceTemplate.textColor : '#666'};
        margin-top:8px;
        font-size: 12px;
        font-weight: 500;
        font-style: italic;
      }
      .notice-invoice {
        padding: 15px;
      }
      .notice-invoice .notice {
        color: #{model.invoiceTemplate && model.invoiceTemplate.textColor ? model.invoiceTemplate.textColor : '#5d6975'};
        
      }
      .footer-invoice {
        margin-top: 40px;
        color: #{model.invoiceTemplate && model.invoiceTemplate.textColor ? model.invoiceTemplate.textColor : '#5d6975'};
        width: 100%;
        position: relative;
        bottom: 0;
        padding: 25px 0;
        text-align: center;
        font-size: 14px;
        font-weight: 600;
        border-top: 2px solid #{model.invoiceTemplate && model.invoiceTemplate.borderColor ? model.invoiceTemplate.borderColor : '#c2e0f2'};
        background-color: #{model.invoiceTemplate && model.invoiceTemplate.backgroundColor ? model.invoiceTemplate.backgroundColor : '#ffffff'};
        line-height: 1.5;
      }
 
  body
    
      header.clearfix
        .top-area
          if settings.company_logo && settings.company_logo !== ''
            img.logo.left(src='http://localhost:8889/'+settings.company_logo, alt='Company Logo')
          else
            .logo-placeholder.left(style='width: 200px; height: 80px; background: #f0f0f0; display: flex; align-items: center; justify-content: center; border: 1px solid #ddd;')
              span(style='color: #999; font-size: 12px;') COMPANY LOGO
          .right.company-info
              p.strong #{settings.company_name}
              p #{settings.company_address}
              p #{settings.company_reg_number}
              
        .col.col-24
          .space  
        .left.col-14
            h1.invoice
              | #{translate('invoice')}
            div 
              .col.col-7
                p.strong #{translate('Date')} :
                p #{moment(model.date).format(dateFormat)}
              .col.col-9
                p.strong #{translate('Expired Date')} :
                p #{moment(model.expiredDate).format(dateFormat)}
              .col.col-8 
                p.strong #{translate('Number')} :
                p # #{model.number}/#{model.year || ""} 
              
        .right.col-10
            .billTo
                p #{translate('Client')} :
                p #{model.client.name}
                p #{model.client.address}
                p #{model.client.phone}
                p #{model.client.email}
        .col.col-24
          .space  
      main
        table.table-invoice
          thead
            tr.tableHeader
              th.service #{translate('item')}
              th #{translate('Quantity')}
              th #{translate('PRICE')}
              th #{translate('TOTAL')}
          tbody
            each item in model.items
              tr
                td.service #{item.itemName}
                  span #{item.description}
                td.qty #{item.quantity}  
                td.unit  #{moneyFormatter({amount:item.price})}
                td.total #{moneyFormatter({amount:item.total})}
            tr
              td(colspan='3') #{translate('SUB TOTAL')}
              td.total #{moneyFormatter({amount:model.subTotal})}
            tr
              td(colspan='3') #{translate('TAX')} #{model.taxRate} %
              td.total #{moneyFormatter({amount:model.taxTotal})}
            tr
              td.grand.total(colspan='3')  
                .total-section
                  .total-label #{translate('TOTAL')}
                  .total-amount #{moneyFormatter({amount:model.total})}
              td.grand.total #{moneyFormatter({amount:model.total})}
        
      .col.col-24
          .space     
      footer.footer-invoice
        if settings.pdf_invoice_footer && settings.pdf_invoice_footer !== ''
          | #{settings.pdf_invoice_footer}
        else
          | Invoice was created on a computer and is valid without the signature and seal.
          

   
